@model FutureCafe.Business.Dtos.CategoryViewDto

<div class="container">
  <div class="row mb-2">
    <div class="col">
      <div class="card">
        <div class="card-header">
          <h5>Ürün Kategori Detay</h5>
          @*<div asp-validation-summary="All"></div>*@
        </div>
        <div class="card-body">
          <div class="container">
            <div class="row mb-4">
              <div class="col">
                <label asp-for="Name" class="mb-2"></label>
                <div class="container bg-dark-subtle rounded p-2">@Model.Name</div>
              </div>
            </div>
            <div class="row mb-2">
              <div class="col">
                <a asp-controller="Category" asp-action="Index" class="btn btn-primary" style="width:150px">Listeye Dön</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>