@model FutureCafe.Business.Dtos.UserForLoginDto
@{
  Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0,, shrink-to-fit=no" />
  <title>@ViewData["Title"] - FutureCafe</title>
  <link href="~/lib/literatheme/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/FutureCafe.Web.styles.css" asp-append-version="true" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body class="body-wrapper" style="height:100vh;">
  <section class="login py-5 border-top-1" style="height:100%; display:flex; align-items:center; justify-content:center">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-5 col-md-8 ">
          <div class="border border">
            <h3 class="bg-gray p-4">Giriş Yap</h3>         
            <form asp-controller="Auth" asp-action="Login" asp-area="" method="post">
              <fieldset class="p-4">             
                <label asp-for="Email" class="mb-2"></label>
                <div class="input-group mb-2">                  
                  <span class="input-group-text"><i class="bi-person-fill pe-2"></i></span>
                  <input asp-for="Email" type="text" placeholder="Email Adresi" class="form-control">
                </div>
               @*  <label asp-for="Password" class="mb-2"></label>
                <div class="input-group mb-4">
                  <span class="input-group-text"><i class="bi-key-fill pe-2"></i></span>
                  <input asp-for="Password" type="password" placeholder="Şifre" class="form-control">
                </div> *@

               
                    <label asp-for="Password" class="mb-2"></label>
                <div class="input-group">
                  <span class="input-group-text"><i class="bi-key-fill pe-2"></i></span>
                      <input type="password" asp-for="Password" class="form-control" id="passwordInput" placeholder="Şifre" />
                      <button type="button" class="btn btn-outline-primary" id="togglePassword" onclick="togglePasswordVisibility()"><i class="bi-eye pe-2" id="toggleIcon"></i></button>
                    </div>
                   
              
                @*  <div class="loggedin-forgot">
                <input asp-for="RememberMe" type="checkbox" id="keep-me-logged-in">
                <label for="keep-me-logged-in" class="pt-3 pb-2">Beni Hatırla</label>
                </div> *@
                <div asp-validation-summary="All" style="color:red"></div>
                <button type="submit" class="d-block py-3 px-5 bg-primary text-white border-0 rounded font-weight-bold">Giriş Yap</button>
                @* <a class="mt-3 d-block  text-primary" href="#">Şifreni mi unuttun?</a>
                <a class="mt-3 d-inline-block text-primary" href="register.html">Kayıt ol</a> *@
              </fieldset>
            </form>
            
          </div>
        </div>
      </div>
    </div>
  </section>

  <footer class="border-top footer text-muted">
    <div class="container">
      &copy; 2023 - FutureCafe.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
  </footer>
  @*  <script src="~/lib/jquery/dist/jquery.min.js"></script> *@
  @*  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> *@
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  <script src="~/js/site.js" asp-append-version="true"></script>

  <script>

    var passwordInput = document.getElementById("passwordInput");
    var toggleButton = document.getElementById("togglePassword");
    var toggleIcon = document.getElementById("toggleIcon");


    function togglePasswordVisibility() {

      if (passwordInput.type === "password") {
        passwordInput.type = "text";
        //toggleButton.innerText = "Şifre Gizle";
        toggleIcon.className = "bi-eye-slash pe-2";
      } else {
        passwordInput.type = "password";
        //toggleButton.innerText = "Şifre Göster";
        toggleIcon.className = "bi-eye pe-2";
      }
    }
   
  </script>
</body>
</html>